  <div class="container">
      <div class="row" style="margin-top:20px;">
          <div class="col-lg-3 custom-col-width text-center" style="border:1px solid white;border-radius:10px;padding:20px;">
              <h2 class="mt-0 text-color">Place the bet on the dice number(1 to 6)</h2>
              <hr class="divider my-4" />
              <form  action="/home" method="post">
                <div class="form-group">
                  <label for="bet" class="text-color">Bet</label>
                  <input type="number" id="bet" class="form-control" name="bet" required>
                </div>
                <div class="form-group">
                  <label for="on" class="text-color">On</label>
                  <input type="number" class="form-control" id="on" name="on" min="1" max="6" required>
                </div>
                <button name="Bet" type="submit" class="btn btn-danger">Bet</button>
              </form>
          </div>
          <div class="col-lg-3 custom-col-width text-center" style="border:1px solid white;border-radius:10px;padding:20px;margin-left:40px;">
              <h2 class="mt-0 text-color">Session Total</h2>
              <hr class="divider my-4" />
              <form  action="/home" method="post" >
                <div class="form-group">
                  <label for="session-win" class="text-color">Session Win</label>
                  <input type="text" class="form-control" name="session-win" id="sessionwin" value= <%=session[:sessionwin]%> readonly></input>
                </div>
                <div class="form-group">
                  <label for="sidebar-lost" class="text-color">Session Loss</label>
                  <input type="text" class="form-control" name="sessionlost" id="sidebar-lost" value= <%=session[:sessionloss]%> readonly></input>
                </div>
                <div class="form-group">
                  <label for="sidebar-profit" class="text-color">Session Profit</label>
                  <input type="text" class="form-control" name="sessionprofit" id="sidebar-profit" value= <%=session[:sessionprofit]%> readonly></input>
                </div>
              </form>
          </div>
          <div class="col-lg-3 custom-col-width text-center" style="border:1px solid white;border-radius:10px;padding:20px;margin-left:40px;">
              <h2 class="mt-0 text-color">Account Balance</h2>
              <hr class="divider my-4" />
              <form  action="/home" method="post">
                <div class="form-group">
                    <label for="win" class="text-color">Total Win</label>
                    <input type="text" class="form-control" name="win" id="win" value= <%= session[:accountwin] %> readonly></input>
                </div>
                <div class="form-group">
                  <label for="lost" class="text-color">Total Loss</label>
                  <input type="text" class="form-control" name="lost" id="lost" value= <%= session[:accountloss]%> readonly></input>
                </div>
                <div class="form-group">
                  <label for="lost" class="text-color">Total Profit</label>
                  <input type="text" class="form-control" name="profit" id="profit" value= <%= session[:accountprofit]%> readonly></input>
                </div>
              </form>
          </div>
       </div>
       <div class="row" style="margin-top:20px">
         <div class="col-lg-12 text-center">
           <% if session[:winMessage] %>
           <h2 class="mt-0 text-color"><%= session[:winMessage] %> </h2>
               <% session[:winMessage]= nil %>
           <% end %>
         </div>
      </div>
       <div class="row" style="margin-top:20px">
         <div class="col-lg-12 text-center">
             <form  action="/logout" method="post">
                 <button name="logout" class="btn btn-lg btn-danger" type="submit" id="logout">Logout</button>
             </form>
         </div>
      </div>
  </div>
